{
  "manifest_version": 3,
  "name": "ZD-AI-Extension",
  "version": "1.0.0",
  "description": "AI text rephraser, extender, and concise tool",
  "permissions": ["storage", "activeTab", "scripting", "tabs", "clipboardWrite"],
  "host_permissions": ["https://*.zendesk.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}